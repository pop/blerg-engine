<!DOCTYPE html>
<head>
<link rel='stylesheet' type='text/css' href='/style.css'>
</head>
<body>

  <div class='meta'>

  <header>
    <a href='/'>
    <img src='/static/hello_world.png'></img>
    </a>
  </header>

  <article>
    <h1>{{ article['title'] }}</h1>
    {{ article['body'] }}
  </article>

  <nav>
    <h2>Posts</h2>
    <ul>
      {% for e in navigation %}
      {% if loop.index <= archive_cutoff %}
      {% if e['url'] != '/index/' %}
      <li>
        <a href="{{ e['url'] }}">{{ e['title'] }}</a>
      </li>
      {% endif %}
      {% endif %}
      {% endfor %}
    </ul>
  </nav>

  </div>
</body>
